{
  "name": "luci",
  "version": "1.1.0",
  "description": "Shortlink tiny-service",
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "node scripts/build.js",
    "build:dev": "WATCH=1 node scripts/build.js",
    "start": "node dist/main.js",
    "dev": "nodemon dist/main.js",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "keywords": [
    "shortlink"
  ],
  "author": "One <kabalx47@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@fastify/awilix": "^3.0.1",
    "awilix": "^8.0.0",
    "base62-random": "^0.3.5",
    "dotenv": "^16.0.3",
    "fastify": "^4.10.2",
    "mongoose": "^6.8.0",
    "redis": "^4.5.1",
    "superstruct": "^1.0.3"
  },
  "devDependencies": {
    "@types/base62-random": "^0.3.0",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.12",
    "esbuild": "^0.16.4",
    "fast-glob": "^3.2.12",
    "jest": "^29.3.1",
    "jest-mock-extended": "^3.0.1",
    "nodemon": "^2.0.20",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4"
  },
  "jest": {
    "testTimeout": 30000,
    "coverageThreshold": {
      "global": {
        "branches": 55,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/$1"
    }
  }
}
